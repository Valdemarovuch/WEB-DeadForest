# Copy to .env and adjust as needed
DATABASE_URL=sqlite:///./lab.db
SECRET_KEY=change_me
ACCESS_TOKEN_EXPIRE_MINUTES=43200 # 30 days default

# Logging (optional)
# LOG_LEVEL can be DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO
# Set to 1 to enable JSON logs (requires python-json-logger)
LOG_JSON=0
# Truncate long log messages to this many characters
LOG_MAX_MESSAGE=2000
# In-memory recent logs buffer size for Admin UI
LOG_BUFFER_SIZE=500
# File path to also write logs (optional)
# LOG_FILE=backend/app.log

# Error spike detection (optional)
# How many 5xx errors within ERROR_WINDOW_SEC to trigger an alert
ERROR_SPIKE_THRESHOLD=10
# The rolling window in seconds for spike detection
ERROR_WINDOW_SEC=60

# Sentry (optional)
# SENTRY_DSN=<your dsn>
# SENTRY_TRACES_SAMPLE_RATE=0.0
